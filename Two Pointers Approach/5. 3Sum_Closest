class Solution:
    def threeSumClosest(self, nums: List[int], target: int) -> int:
        nums.sort()
        diff = float('inf')
        res_sum = 0 
        n = len(nums)
        for i in range(n-2):
            l = i+1
            r = n-1
            while(l<r):
                total = nums[i] + nums[l] + nums[r]
                d = abs(total-target)
                if diff>d:
                    diff = d
                    res_sum = total
                if total==target:
                    return res_sum
                elif total<target:
                    l+=1
                else:
                    r-=1
        return res_sum
